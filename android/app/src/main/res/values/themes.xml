<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for CryptingTool -->
    <style name="Theme.CryptingTool" parent="Theme.AppCompat.DarkActionBar">
        <!-- Dark theme colors -->
        <item name="colorPrimary">@color/teal_accent</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
        <item name="colorAccent">@color/lime_green</item>
        <item name="android:colorBackground">@color/dark_gray</item>
        <item name="android:textColorPrimary">@color/light_gray</item>
    </style>
    
    <!-- Flutter NormalTheme for v2 embedding -->
    <style name="NormalTheme" parent="@style/Theme.CryptingTool">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>
</resources>